<UserControl x:Class="WindowsUpdateManualInstaller.ProgressBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsUpdateManualInstaller"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label x:Name="label" Content="Text..." HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" />
        <ProgressBar Height="20" Margin="10,42,10,0" VerticalAlignment="Top" IsIndeterminate="True"/>
        <Button x:Name="cancelBtn" Content="Cancel" HorizontalAlignment="Center" Margin="0,120,0,0" VerticalAlignment="Top" Width="75" Click="cancelBtn_Click"/>

    </Grid>
</UserControl>
